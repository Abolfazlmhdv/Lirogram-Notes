<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    >

<!--    <View-->
<!--        android:id="@+id/selectIndicator"-->
<!--        android:layout_width="20dp"-->
<!--        android:background="@drawable/circle_selector"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_height="20dp"/>-->


    <LinearLayout
        android:id="@+id/linesnote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="ltr"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/background"
        android:padding="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                android:textColor="@color/textcolor"
                android:fontFamily="@font/iransans"
                android:textSize="23dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@color/background"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caption"
                android:textSize="17dp"
                android:fontFamily="@font/iransans"
                android:textDirection="ltr"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textColor="@color/textcolor"/>


            </LinearLayout>

            <TextView
                android:id="@+id/timeclick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="TimeClick"
                android:textColor="@color/timecolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="15dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/clickvert2"
            android:layout_width="35dp"
            android:background="@drawable/clickvert"
            android:padding="5dp"
            android:layout_height="35dp"
            android:src="@drawable/vert_24"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="35dp"
            android:layoutDirection="ltr"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layoutDirection="ltr"
            android:background="@color/lineone"/>


    </LinearLayout>

</LinearLayout>