<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:elevation="5dp"
    android:layout_margin="0dp"
    android:background="@drawable/border_popupwindow"
    android:layout_gravity="center"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="@drawable/border_popupwindow"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/clickadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="0dp"
            android:layout_gravity="center"
            android:layoutDirection="locale"
            android:background="@drawable/click_item2">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/edit_24"/>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:gravity="center"
                style="@style/AppFontStyle"
                android:text="@string/ovr1"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/pinnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_item3"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layoutDirection="locale"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/pin_24"/>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/textcolor"
                style="@style/AppFontStyle"
                android:textSize="14sp"
                android:text="@string/pin"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/deletenote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/click_item"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layoutDirection="locale"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/deleten_24"/>

            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/textcolor"
                style="@style/AppFontStyle"
                android:textSize="14sp"
                android:text="@string/ovr2"/>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>