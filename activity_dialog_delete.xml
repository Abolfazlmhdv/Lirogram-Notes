<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_margin="15dp"
    android:padding="8dp"
  android:background="@drawable/bordershape_dialog"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bordershape_dialog"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AppFontStyle"
            android:text="@string/captiondelete"
            android:textColor="@color/textcolor"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layoutDirection="rtl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deleten"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:background="@drawable/click_border2"
               style="@style/AppFontStyle"
                android:padding="8dp"
                android:text="@string/delete"
                android:textColor="#B00D0D"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/closedialogg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/click_border2"
              style="@style/AppFontStyle"
                android:layoutDirection="ltr"
                android:padding="8dp"
                android:text="@string/cancel"
                android:textColor="@color/textcolor"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>